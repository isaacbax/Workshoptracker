<Window x:Class="DesignSheet.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DesignSheet.Views"
        Title="Change Password"
        Height="260"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Current -->
            <RowDefinition Height="Auto"/>
            <!-- New -->
            <RowDefinition Height="Auto"/>
            <!-- Confirm -->
            <RowDefinition Height="*"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text="Change Password"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Current password -->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"
                   Text="Current password:"/>
        <PasswordBox Grid.Row="1"
                     Grid.Column="1"
                     views:PasswordBoxHelper.BindPassword="True"
                     views:PasswordBoxHelper.BoundPassword="{Binding CurrentPassword, Mode=TwoWay}"/>

        <!-- New password -->
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,8,8,0"
                   Text="New password:"/>
        <PasswordBox Grid.Row="2"
                     Grid.Column="1"
                     Margin="0,8,0,0"
                     views:PasswordBoxHelper.BindPassword="True"
                     views:PasswordBoxHelper.BoundPassword="{Binding NewPassword, Mode=TwoWay}"/>

        <!-- Confirm new password -->
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,8,8,0"
                   Text="Confirm new password:"/>
        <PasswordBox Grid.Row="3"
                     Grid.Column="1"
                     Margin="0,8,0,0"
                     views:PasswordBoxHelper.BindPassword="True"
                     views:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay}"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="OK"
                    Width="90"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Command="{Binding ConfirmCommand}"/>
            <Button Content="Cancel"
                    Width="90"
                    IsCancel="True"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
