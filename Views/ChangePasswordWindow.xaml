<Window x:Class="DesignSheet.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DesignSheet.Views"
        Title="Change Password"
        Height="260"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Current password -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="Current password:"/>
        <PasswordBox Grid.Row="0" Grid.Column="1"
                     Margin="0,0,0,8"
                     views:PasswordBoxHelper.BindPassword="True"
                     views:PasswordBoxHelper.BoundPassword="{Binding CurrentPassword, Mode=TwoWay}"/>

        <!-- New password -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="New password:"/>
        <PasswordBox Grid.Row="1" Grid.Column="1"
                     Margin="0,0,0,8"
                     views:PasswordBoxHelper.BindPassword="True"
                     views:PasswordBoxHelper.BoundPassword="{Binding NewPassword, Mode=TwoWay}"/>

        <!-- Confirm password -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="Confirm new:"/>
        <PasswordBox Grid.Row="2" Grid.Column="1"
                     Margin="0,0,0,8"
                     views:PasswordBoxHelper.BindPassword="True"
                     views:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay}"/>

        <!-- Error -->
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2"
                   Margin="0,0,0,8"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    Width="80"
                    Margin="0,0,5,0"
                    IsDefault="True"
                    Command="{Binding OkCommand}"/>
            <Button Content="Cancel"
                    Width="80"
                    IsCancel="True"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
