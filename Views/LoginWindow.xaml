<Window x:Class="DesignSheet.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DesignSheet.Views"
        Title="Login"
        Height="260"
        Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Username -->
            <RowDefinition Height="Auto"/>
            <!-- Password -->
            <RowDefinition Height="Auto"/>
            <!-- Branch -->
            <RowDefinition Height="Auto"/>
            <!-- Folder -->
            <RowDefinition Height="*"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text="Workshop Tracker Login"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Username -->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"
                   Text="Username:"/>
        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 MinWidth="220"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Password -->
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,8,8,0"
                   Text="Password:"/>
        <PasswordBox Grid.Row="2"
                     Grid.Column="1"
                     Margin="0,8,0,0"
                     views:PasswordBoxHelper.BindPassword="True"
                     views:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"/>

        <!-- Branch -->
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,8,8,0"
                   Text="Branch:"/>
        <ComboBox Grid.Row="3"
                  Grid.Column="1"
                  Margin="0,8,0,0"
                  ItemsSource="{Binding AvailableBranches}"
                  SelectedItem="{Binding SelectedBranch}"
                  IsEnabled="{Binding IsRoot}"/>

        <!-- Data folder -->
        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,12,8,0"
                   Text="Data folder:"/>
        <DockPanel Grid.Row="4"
                   Grid.Column="1"
                   Margin="0,12,0,0">
            <TextBox Text="{Binding FolderPath, Mode=TwoWay}"
                     IsReadOnly="True"
                     VerticalAlignment="Center"
                     MinWidth="220"/>
            <Button Content="Browse..."
                    Margin="8,0,0,0"
                    Padding="8,2"
                    Command="{Binding BrowseFolderCommand}"/>
        </DockPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Login"
                    Width="90"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Command="{Binding LoginCommand}"/>
            <Button Content="Cancel"
                    Width="90"
                    IsCancel="True"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
