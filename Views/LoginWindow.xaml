<Window x:Class="DesignSheet.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DesignSheet.Views"
        Title="Login"
        Height="260"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Username -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="Username:"/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 Margin="0,0,0,8"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Password -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="Password:"/>
        <PasswordBox Grid.Row="1" Grid.Column="1"
                     Margin="0,0,0,8"
                     views:PasswordBoxHelper.BindPassword="True"
                     views:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"/>

        <!-- Branch -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="Branch:"/>
        <ComboBox Grid.Row="2" Grid.Column="1"
                  Margin="0,0,0,8"
                  ItemsSource="{Binding Branches}"
                  SelectedItem="{Binding SelectedBranch, Mode=TwoWay}"
                  IsEditable="False"/>

        <!-- Folder path + browse -->
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="Data folder:"/>
        <StackPanel Grid.Row="3" Grid.Column="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBox Width="260"
                     Text="{Binding FolderPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Browse..."
                    Width="70"
                    Margin="5,0,0,0"
                    Click="Browse_Click"/>
        </StackPanel>

        <!-- Error text -->
        <TextBlock Grid.Row="4" Grid.ColumnSpan="2"
                   Margin="0,0,0,8"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Login"
                    Width="80"
                    Margin="0,0,5,0"
                    IsDefault="True"
                    Click="Login_Click"/>
            <Button Content="Cancel"
                    Width="80"
                    IsCancel="True"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
