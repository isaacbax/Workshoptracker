<Window x:Class="DesignSheet.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change password"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="230"
        Width="380"
        Background="#0f172a">
    <Border BorderBrush="#0f766e" BorderThickness="2" CornerRadius="8" Margin="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#0f766e" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="UsernameLabel"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           Foreground="White"
                           FontWeight="Bold"/>

                <Button Grid.Column="1"
                        Width="32"
                        Height="24"
                        Margin="0,0,8,0"
                        Content="X"
                        Click="CloseButton_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Transparent"/>
            </Grid>

            <Grid Grid.Row="1" Margin="12" Background="#020617">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Old password:"
                           Foreground="White"
                           Margin="0,8,8,0"/>
                <PasswordBox x:Name="OldPasswordBox"
                             Grid.Row="0" Grid.Column="1"
                             Width="180"
                             Margin="0,4,0,0"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="New password:"
                           Foreground="White"
                           Margin="0,8,8,0"/>
                <PasswordBox x:Name="NewPasswordBox"
                             Grid.Row="1" Grid.Column="1"
                             Width="180"
                             Margin="0,4,0,0"/>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,16,0,0">
                    <Button Content="Save"
                            Width="90"
                            Margin="0,0,8,0"
                            Click="Save_Click"/>
                    <Button Content="Cancel"
                            Width="80"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
