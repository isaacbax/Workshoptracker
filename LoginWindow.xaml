<Window x:Class="DesignSheet.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign in to DesignData"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="260"
        Width="420"
        Background="#0f172a">
    <Border BorderBrush="#0f766e" BorderThickness="2" CornerRadius="8" Margin="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- title bar -->
            <Grid Grid.Row="0" Background="#0f766e" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Sign in to DesignData"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="14"/>

                <Button Grid.Column="1"
                        Width="32"
                        Height="24"
                        Margin="0,0,8,0"
                        Content="X"
                        Click="CloseButton_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Transparent"/>
            </Grid>

            <!-- content -->
            <Grid Grid.Row="1" Margin="12" Background="#020617">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Username:"
                           Margin="0,8,8,0"
                           Foreground="White"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         x:Name="UsernameTextBox"
                         Margin="0,4,0,0"
                         Width="200"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Password:"
                           Margin="0,8,8,0"
                           Foreground="White"/>
                <PasswordBox Grid.Row="1" Grid.Column="1"
                             x:Name="PasswordBox"
                             Margin="0,4,0,0"
                             Width="200"/>

                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Branch:"
                           Margin="0,8,8,0"
                           Foreground="White"/>
                <ComboBox Grid.Row="2" Grid.Column="1"
                          x:Name="BranchComboBox"
                          Margin="0,4,0,0"
                          Width="200"/>

                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Folder:"
                           Margin="0,8,8,0"
                           Foreground="White"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock x:Name="BaseFolderTextBlock"
                               VerticalAlignment="Center"
                               Foreground="White"
                               TextTrimming="CharacterEllipsis"
                               Width="200"/>
                    <Button Content="..."
                            Width="28"
                            Margin="6,0,0,0"
                            Click="ChangeFolderButton_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,16,0,0">
                    <Button Content="Connect"
                            Width="90"
                            Margin="0,0,8,0"
                            Click="Connect_Click"/>
                    <Button Content="Cancel"
                            Width="80"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
